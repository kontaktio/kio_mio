<div class="container-fluid">
  <h1>Floors</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Client</th>
        <th>Name</th>
        <th>Building</th>
        <th>Rooms</th>
      </tr>
    </thead>
    <tbody>
      <% @floors.each do |floor| %>
        <tr>
          <td><%= link_to floor.client&.name, floor&.client %></td>
          <td><%= link_to floor.name, floor %></td>
          <td><%= link_to floor.building&.name, floor&.building %></td>
          <td><%= link_to floor.rooms.size.to_s, rooms_path(floor.rooms) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Floor', new_floor_path, class: "btn btn-primary" %>
</div>
<div class="pt-4">
  <%== pagy_bootstrap_combo_nav_js(@pagy) %>
</div>
