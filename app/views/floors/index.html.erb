<div class="container-fluid">
  <h1>Floors</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Client</th>
        <th>Floor</th>
        <th>Name</th>
        <th>Building</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @floors.each do |floor| %>
        <tr>
          <td><%= link_to floor.client.name, floor.client %></td>
          <td><%= floor.floor_id %></td>
          <td><%= floor.name %></td>
          <td><%= floor.building_id %></td>
          <td><%= link_to 'Show', floor %></td>
          <td><%= link_to 'Edit', edit_floor_path(floor) %></td>
          <td><%= link_to 'Destroy', floor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Floor', new_floor_path, class: "btn btn-primary" %>
</div>
